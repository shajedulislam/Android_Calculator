<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3f374f"
    tools:context="${relativePackage}.${activityClass}" >

    <Button
        android:id="@+id/Btn7"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Btn6"
        android:layout_toRightOf="@+id/Btn8"
        android:text="7" />

    <Button
        android:id="@+id/Btn8"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Btn6"
        android:layout_toRightOf="@+id/Btn9"
        android:text="8" />

    <Button
        android:id="@+id/Btn6"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Btn9"
        android:layout_toLeftOf="@+id/Btn8"
        android:text="6" />

    <Button
        android:id="@+id/Btn5"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Btn8"
        android:layout_below="@+id/Btn7"
        android:text="5" />

    <Button
        android:id="@+id/Btn4"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/Btn5"
        android:text="4" />

    <Button
        android:id="@+id/Btn3"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/Btn6"
        android:text="3" />

    <Button
        android:id="@+id/Btn2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Btn5"
        android:layout_alignTop="@+id/Btn3"
        android:text="2" />

    <Button
        android:id="@+id/Btn1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Btn4"
        android:layout_below="@+id/Btn4"
        android:text="1" />

    <Button
        android:id="@+id/Btnallclear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/Btn4"
        android:text="AC" />

    <Button
        android:id="@+id/BtnMs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/Btn1"
        android:text="MS" />

    <Button
        android:id="@+id/btn0"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/Btn3"
        android:text="0" />

    <Button
        android:id="@+id/BtnMr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btn0"
        android:text="@string/BtnMr" />

    <Button
        android:id="@+id/Btn9"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Btn4"
        android:layout_alignParentLeft="true"
        android:text="9" />

    <Button
        android:id="@+id/Btnans"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Btn1"
        android:layout_alignRight="@+id/Btn1"
        android:layout_alignTop="@+id/btn0"
        android:text="Ans" />

    <Button
        android:id="@+id/Btndot"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn0"
        android:layout_alignBottom="@+id/btn0"
        android:layout_toLeftOf="@+id/Btn1"
        android:text="." />

    <TextView
        android:id="@+id/display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Btnclear"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#d0caca" />

    <Button
        android:id="@+id/btnplus"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Btn7"
        android:layout_toRightOf="@+id/Btn7"
        android:text="+" />

    <Button
        android:id="@+id/Btnminus"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Btnallclear"
        android:layout_toRightOf="@+id/btnplus"
        android:text="-" />

    <Button
        android:id="@+id/Btnmult"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Btn4"
        android:layout_toRightOf="@+id/Btn4"
        android:text="x" />

    <Button
        android:id="@+id/Btndiv"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Btnminus"
        android:layout_below="@+id/Btnminus"
        android:text="/" />

    <Button
        android:id="@+id/Btnclear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Btnallclear"
        android:layout_alignParentRight="true"
        android:text="C" />

    <Button
        android:id="@+id/Btnequal"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Btnans"
        android:layout_alignLeft="@+id/Btnmult"
        android:layout_alignRight="@+id/Btndiv"
        android:layout_alignTop="@+id/Btn1"
        android:text="=" />

</RelativeLayout>